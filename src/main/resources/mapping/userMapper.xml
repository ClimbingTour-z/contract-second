<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ff.dao.UserMapper">
    <!-- 目的：为DAO接口方法提供sql语句配置 -->
    <!-- 查询用户和密码进行登录 -->
    <select id="findByUsername" resultType="com.ff.model.User" parameterType="String">
		select *
		from user
		where username = #{username}
	</select>

	<!--通过username获取user对象-->
	<select id="querySingleUser" parameterType="String" resultType="com.ff.model.User">
        SELECT *
        from user
        where username = #{username}
    </select>
</mapper>